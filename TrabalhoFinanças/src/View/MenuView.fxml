            <Text style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-fill: #333333;" text="Menu Principal" />
            <Button onAction="#handleVerSaldo" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 180px;" text="Ver Saldo" />
            <Button onAction="#handleAdicionarTransacao" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 180px;" text="Adicionar Transação" />
            <Button onAction="#handleVerHistorico" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 180px;" text="Ver Histórico" />
        </VBox>
    </children>
</AnchorPane>
